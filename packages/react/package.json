{
  "name": "@memento/react",
  "version": "0.0.1",
  "license": "MIT",
  "description": "React bindings for memento",
  "main": "es5/index.js",
  "types": "es5/index.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepublish": "tsc --p ./tsconfig.publish.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "flux",
    "state management"
  ],
  "author": "jeanfortheweb",
  "devDependencies": {
    "@memento/made": "0.0.1",
    "@types/enzyme": "3.1.9",
    "@types/jest": "22.2.2",
    "@types/react": "16.0.40",
    "@types/react-test-renderer": "16.0.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "jest": "22.4.3",
    "react-dom": "16.2.0",
    "ts-jest": "22.4.2",
    "typescript": "2.7.2"
  },
  "dependencies": {
    "@memento/store": "0.0.1",
    "immutable": "4.0.0-rc.9",
    "react": "16.2.0",
    "react-test-renderer": "16.2.0"
  },
  "jest": {
    "bail": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "\\.spec\\.tsx?$",
    "mapCoverage": true
  }
