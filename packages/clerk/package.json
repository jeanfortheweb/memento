{
  "name": "@memento/clerk",
  "version": "0.0.1",
  "description": "Local and session storage management for memento",
  "license": "MIT",
  "main": "es5/index.js",
  "types": "es5/index.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepublish": "tsc --p ./tsconfig.publish.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "flux",
    "state management"
  ],
  "author": "jeanfortheweb",
  "devDependencies": {
    "@memento/probe": "0.0.1",
    "@memento/reviver": "0.0.1",
    "@types/jest": "22.2.2",
    "jest": "22.4.3",
    "jest-localstorage-mock": "2.2.0",
    "ts-jest": "22.4.2",
    "typescript": "2.7.2"
  },
  "dependencies": {
    "@memento/store": "0.0.1",
    "@reactivex/rxjs": "5.5.7",
    "immutable": "4.0.0-rc.9"
  },
  "jest": {
    "bail": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "\\.spec\\.ts$",
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
